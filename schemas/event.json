{
  "id": "event",
  "type": "object",
  "required": ["id", "owner", "title", "description", "recurring", "start_time", "end_time", "timezone"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "owner": { "type": "string", "minLength": 1 },
    "hosts": { "type": "array", "items": { "type": "string", "minLength": 1 }, "default": [] },
    "subscribers": { "type": "array", "items": { "type": "string", "minLength": 1 }, "default": [] },
    "notifications": { "type": "array", "items": { "type": "string", "minLength": 1 }, "default": [] },
    "title": { "type": "string", "minLength": 3 },
    "description": { "type": "string", "minLength": 3 },
    "picture": { "type": "string", "minLength": 3 },
    "link": { "type": "string", "minLength": 3 },
    "tags": { "type": "array", "items": { "type": "string", "minLength": 3 }, "default": [] },
    "rrule": { "type": "string", "minLength": 3 },
    "recurring": { "type": "boolean", "default": false },
    "start_time": { "type": "integer" },
    "end_time": { "type": "integer" },
    "duration": { "type": "string", "minLength": 1 },
    "timezone": { "type": "string", "minLength": 1 }
  },
  "additionalProperties": false
}
